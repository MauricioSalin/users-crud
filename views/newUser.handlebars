<div class="hero-body">
<div class="content">
    <a class="button" href="/">Pagina anterior</a>
    </div>
{{#user}}
  <form action="{{action}}" method="post">
    <div class="field">
      <label class="label">Nome</label>
      <div class="control">
        <input id="name" name="name" class="input" maxlength="40" type="text" placeholder="Nome" value="{{name}}" required>
        <input id="id" name="id" class="input" type="hidden" value="{{_id}}">
      </div>
    </div>

<div class="field">
      <label class="label">Sobrenome</label>
      <div class="control">
        <input id="lastname" name="lastname" class="input" maxlength="40" type="text" placeholder="Sobrenome" value="{{lastname}}" required>
      </div>
    </div>

    <div class="field">
      <label class="label">E-mail</label>
      <div class="control">
        <input id="email" name="email" class="input" type="email" placeholder="E-mail" value="{{email}}" required>
      </div>
    </div>


    <div class="field">
      <label class="label">CPF</label>
      <div class="control">
        <input id="cpf" name="cpf" class="input" maxnumber="11" type="number" placeholder="CPF" value="{{cpf}}" required>
      </div>
    </div>

  <div class="field">
      <label class="label">Telefone</label>
      <div class="control">
        <input id="phone" name="phone" class="input" type="number" placeholder="Telefone" value="{{phone}}" required>
      </div>
    </div>

      <div class="field">
      <label class="label">Data de nascimentoo</label>
      <div class="control">
        <input id="date" name="date" class="input" type="date"  value="{{date}}" required>
      </div>
    </div>

<div class="field">
      <label class="label">Status do usuario</label>
<div class="control">
  <label class="radio">
    <input id="status" type="radio" name="status" value="Ativo" >
    Ativo
  </label>
  <label class="radio">
    <input id="status" type="radio" name="status" value="Inativo" >
    Inativo
  </label>
</div>
    </div>
    <div class="field is-grouped">
      <div class="control">
        <input type="submit" value="Salvar" class="button is-primary is-medium is-fullwidth">
      </form>
    </div>
    <div class="control">
      <a class="button is-danger is-medium is-fullwidth" href="/">Cancelar</a>
    </div>
    <p>{{return}}</p>
{{/user}} 
  </div>